    "version": "0.2.0",
    "configurations": [
        {
            // Build and run tests in the Debug configuration
            "name": "ConsoleApp",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/ConsoleApps/ConsoleApp/bin/Debug/net8.0/ConsoleApp.dll",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "BlazorProject",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/ASP.NET/BlazorProject/bin/Debug/net8.0/BlazorProject.dll",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "BlazorProject"
        },
        {
            "name": "RazorProject",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/ASP.NET/RazorProject/bin/Debug/net8.0/RazorProject.dll",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "RazorProject"
        }
    ]
}